<div id="<%= dom_id entry %>">
<div class = "columns mt-6 is-centered">

<div class ="column is-one-quarter">
<div class ="card">
  <header class="card-header">
  <p class = "card-header-title">
   
    <%= entry.meal_type %> : <%= entry.category.title if entry.category.present? %>
  </p>
  </header>

  <div class = "card-content">
  <div class="content">
  <p>
  <span class ="has-text-weight-bold"><strong>Calories:</strong>
    <%= entry.calories %></span>
  </p>

  <p>
  <span class ="has-text-weight-bold"><strong>Grams of protein:</strong>
    <%= entry.proteins %></span>
  </p>

  <p>
  <span class ="has-text-weight-bold"><strong>Grams of carbohydrates:</strong>
    <%= entry.carbohydrates %></span>
  </p>

  <p>
  <span class ="has-text-weight-bold"><strong>Grams of fat:</strong>
    <%= entry.fats %></span>
  </p>
  <p class="italic">Logged <%= time_ago_in_words(entry.created_at) %> ago</p>
  </div>
  </div>
  <div class="card-footer">
      <%= link_to "Show entry", entry, class: "card-footer-item" %>
      <%= link_to "Edit entry", edit_entry_path(entry), class: "card-footer-item" %>
      <%= link_to "Destroy", @entry, method: :delete, class: "card-footer-item" %>
    </div>
  </div>
  </div>
  </div>
</div>

<div class = "columns is-centered mt-6">
 <%= link_to "view all entries", archives_index_path, class: "button is-link is-outlined is-centered" %>
</div>


